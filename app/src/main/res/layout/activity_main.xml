<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clipToPadding="false"
    android:scaleType="centerCrop"
    android:src="@drawable/ic_launcher">

    <TextView
        android:id="@+id/connectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="#FFFFFF"
        android:height="30dp"
        android:text="@string/notConnectedLabel"
        android:gravity="center"
        android:textStyle="bold"
        android:width="200dp" />

    <EditText
        android:id="@+id/nickNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marginTopNicknameInput"
        android:layout_marginBottom="@dimen/marginBottomNicknameInput"
        android:ems="10"
        android:hint="@string/hintNameLabel"
        android:gravity="center"
        android:textColor="#000000"
        android:inputType="text">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/chatRooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickNameInput"
        android:layout_centerHorizontal="true"
        android:text="@string/chatRoomsLabel" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_above="@+id/connectionLabel"
        android:layout_below="@+id/chatRooms"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Â©ActivityManager"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.28"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
